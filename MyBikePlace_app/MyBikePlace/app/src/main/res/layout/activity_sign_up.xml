<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.dev.ami2015.mybikeplace.SignUpActivity" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="50dp"
        android:paddingBottom="50dp"
        android:layout_marginBottom="200dp">

        <TextView
            android:id="@+id/usernameTextSignUpActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Create Username"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:id="@+id/usernameEditSignUpActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:hint="@string/username_rule_hint"/>

        <TextView
            android:id="@+id/passwordTextSignUpActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Create Password"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:id="@+id/passwordEditSignUpActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:inputType="textPassword"
            android:hint="@string/password_rule_hint"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true">

        <Button
            android:id="@+id/buttonSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:onClick="sendSignUpForm" />

        <Button
            android:id="@+id/buttonCancelSignUpActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear"
            android:layout_alignTop="@+id/buttonSignUp"
            android:layout_alignParentEnd="true"
            android:onClick="clearSignUpForm" />
    </RelativeLayout>

</RelativeLayout>
